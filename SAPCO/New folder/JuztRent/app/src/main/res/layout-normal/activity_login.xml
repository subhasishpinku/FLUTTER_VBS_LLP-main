        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp">
            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_marginTop="20sp"
                android:layout_height="50sp"
                android:drawablePadding="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawableRight="@drawable/ic_eye_icon"
                android:id="@+id/text_password"
                android:hint="Create Password"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/fpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:layout_marginRight="50sp"
            android:padding="5sp"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_xml_text_size_subs"
             />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/login"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Login"
            app:backgroundTint="@color/app_color"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@color/app_color"
            app:strokeColor="@color/app_color"
            app:strokeWidth="2dp" />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/llv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                android:text="Donâ€™t have an account? "
                android:textSize="@dimen/normal_xml_text_size_subs" />

            <TextView
                android:id="@+id/sigenID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                android:text=" Sign up"
                android:textColor="@color/app_color"
                android:textSize="@dimen/normal_xml_text_size_subs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llv"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginRight="10sp"
                android:background="@drawable/ic_google" />

            <ImageView
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginLeft="10sp"
                android:background="@drawable/ic_facebook" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>