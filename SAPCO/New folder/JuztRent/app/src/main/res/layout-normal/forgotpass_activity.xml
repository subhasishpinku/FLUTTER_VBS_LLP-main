<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImgID"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:scaleType="fitXY"
            android:background="@drawable/logos" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="10sp"
            android:gravity="left"
            android:text="Forgot password"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_xml_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="2sp"
            android:gravity="left"
            android:text="Forgotpassword in to Continue"
            android:textColor="#434343"
            android:textSize="@dimen/normal_xml_text_size_sub" />

        <EditText
            android:id="@+id/emailID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="80sp"
            android:layout_marginRight="50sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_email"
            android:hint="Email"
            android:drawablePadding="10dp"
            android:padding="15dip" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="100sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset_password"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Reset Password"
                app:backgroundTint="@color/app_color"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:rippleColor="@color/app_color"
                app:strokeColor="@color/app_color"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>