        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_marginTop="0sp"
                android:background="@drawable/ellipses"
                android:orientation="vertical"></FrameLayout>
            <TextView
                android:id="@+id/textView11"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37sp"
                android:layout_marginTop="0sp"
                android:gravity="left"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40sp"
                android:nestedScrollingEnabled="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="600sp"
                    android:layout_below="@+id/textView11"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="50sp"
                    app:cardCornerRadius="20dp"
                    card_view:cardBackgroundColor="#FFFFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tramss"
                            android:layout_width="250sp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="37sp"
                            android:layout_marginTop="40sp"
                            android:gravity="left"
                            android:text="We are committed to protect your privacy"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:gravity="left"
                            android:justificationMode="inter_word"
                            android:text="It is a long established fact that a reader
will be distracted by the readable content
of a page when looking at its layout.The point of using Lorem Ipsum is that it has
a more-or-less normal distribution of
letters, as opposed to using 'Content
here, content here', making it look like readable English.  "
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:gravity="left"
                            android:justificationMode="inter_word"
                            android:text="We are committed to protect your privacy"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginRight="20sp"
                            android:gravity="left"
                            android:justificationMode="inter_word"
                            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. "
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </ScrollView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50sp"
            android:gravity="center|bottom"
            android:orientation="vertical">

        </RelativeLayout>

    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/white"
        android:foreground="?attr/selectableItemBackground"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/navigation" />
