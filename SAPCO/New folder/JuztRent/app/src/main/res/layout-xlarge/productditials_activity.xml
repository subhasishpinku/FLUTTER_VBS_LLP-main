<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:id="@+id/lv"
        android:background="@color/app_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Img"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Img2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/Img2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/ic_cart" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="600sp"
        android:layout_marginTop="50sp"
        android:background="@drawable/ellipses"
        android:orientation="vertical"></FrameLayout>
    <TextView
        android:id="@+id/textView11"
        android:layout_width="600sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37sp"
        android:layout_marginTop="40sp"
        android:gravity="left"
        android:textSize="@dimen/etralarge_xml_text_size"
        android:text="Product details "
        android:textColor="@color/white"
        android:textStyle="bold" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_height="200dp"
        android:layout_marginTop="350sp"
        android:layout_marginBottom="1dp" />
    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_below="@+id/viewPager"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/SliderDots"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37sp"
                android:layout_marginTop="180sp"
                android:gravity="left"
                android:text="Lorem Ipsum"
                android:textColor="@color/black"
                android:textSize="@dimen/etralarge_xml_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="37sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="94sp"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. "
                android:textColor="@color/black"
                android:textSize="@dimen/etralarge_xml_text_size_sub" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="37sp"
                android:layout_marginTop="7sp"
                android:gravity="left"
                android:text="Special price"
                android:textColor="@color/app_color"
                android:textSize="@dimen/etralarge_xml_text_size_sub"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@+id/rv"
                android:layout_below="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37sp"
                    android:layout_marginTop="7sp"
                    android:drawableLeft="@drawable/ic_rupee_icon"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="8,000"
                    android:textSize="@dimen/etralarge_xml_text_size_subs"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:layout_marginTop="7sp"
                    android:layout_marginRight="94sp"
                    android:layout_toRightOf="@+id/textView4"
                    android:drawableLeft="@drawable/ic_rupee_icon"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:text="10,000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/etralarge_xml_text_size_subs"
                    />
            </RelativeLayout>

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv"
                android:layout_gravity="center"
                android:layout_marginLeft="37sp"
                android:layout_marginTop="7sp"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_marginLeft="37sp"
                android:layout_marginTop="10sp"
                android:gravity="left"
                android:text="Color"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TableRow
                android:layout_marginLeft="37sp"
                android:layout_below="@+id/textView6"
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Button
                    android:id="@+id/button13"
                    android:layout_width="150sp"
                    android:backgroundTint="@color/color1"
                    android:layout_height="150sp"
                    style="@style/box_sky_blue"
                    android:text="" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:backgroundTint="@color/color2"
                    style="@style/box_sky_blue"
                    android:text="" />

                <Button
                    android:id="@+id/button15"
                    android:backgroundTint="@color/color3"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    style="@style/box_sky_blue"
                    android:text="" />

            </TableRow>

                <LinearLayout
                    android:layout_marginTop="100sp"
                    android:layout_below="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add"
                        android:layout_width="400sp"
                        android:layout_height="100sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Add to cart"
                        app:backgroundTint="@color/app_color"
                        app:cornerRadius="20dp"
                        android:textSize="@dimen/etralarge_xml_text_size_sub"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:rippleColor="@color/app_color"
                        app:strokeColor="@color/app_color"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_rent"
                        android:layout_width="400sp"
                        android:layout_height="100sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toRightOf="@+id/btn_add"
                        android:gravity="center"
                        android:text="Rent now"
                        android:textSize="@dimen/etralarge_xml_text_size_sub"

                        app:backgroundTint="@color/btn_rent"
                        app:cornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:rippleColor="@color/btn_rent"
                        app:strokeColor="@color/btn_rent"
                        app:strokeWidth="2dp" />
                </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>