<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImgID"
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:layout_gravity="center"
            android:layout_marginTop="0sp"
            android:background="@drawable/logos"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="10sp"
            android:gravity="left"
            android:text="Welcome"
            android:textColor="@color/black"
            android:textSize="@dimen/etralarge_xml_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="2sp"
            android:gravity="left"
            android:text="Sign in to continue"
            android:textColor="#434343"
            android:textSize="@dimen/etralarge_xml_text_size_sub" />

        <EditText
            android:id="@+id/emailID"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/extra_xml_editext_size_height"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="50sp"
            android:layout_marginRight="50sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_email"
            android:hint=" Email"
            android:padding="18dip"
            android:textSize="@dimen/etralarge_xml_text_size_sub" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:orientation="vertical">

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/extra_xml_editext_size_height"
                android:layout_marginTop="20sp"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_password"
                android:drawableRight="@drawable/ic_eye_icon"
                android:drawablePadding="10dp"
                android:hint=" Create Password"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:padding="18dip"
                android:textSize="@dimen/etralarge_xml_text_size_sub" />
        </LinearLayout>
        <!--        <com.google.android.material.textfield.TextInputLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="0dp"-->
        <!--            android:layout_marginTop="0sp"-->
        <!--            app:boxBackgroundMode="none"-->
        <!--            app:layout_constraintLeft_toLeftOf="parent"-->
        <!--            app:layout_constraintRight_toRightOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:passwordToggleEnabled="true">-->

        <!--            <com.google.android.material.textfield.TextInputEditText-->
        <!--                android:id="@+id/textPassword"-->
        <!--                android:layout_height="@dimen/extra_xml_editext_size_height"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_marginLeft="50sp"-->
        <!--                android:layout_marginTop="30sp"-->
        <!--                android:layout_marginRight="50sp"-->
        <!--                android:background="@drawable/rounded_edittext"-->
        <!--                android:hint="Password"-->
        <!--                android:imeOptions="actionDone"-->
        <!--                android:inputType="textPassword" />-->
        <!--        </com.google.android.material.textfield.TextInputLayout>-->

        <TextView
            android:id="@+id/fpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:layout_marginRight="50sp"
            android:padding="5sp"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textSize="@dimen/etralarge_xml_text_size_sub" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login"
                android:layout_width="@dimen/extra_large_button_with"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Login"
                android:textSize="@dimen/etralarge_xml_text_size_sub"
                app:backgroundTint="@color/app_color"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:rippleColor="@color/app_color"
                app:strokeColor="@color/app_color"
                app:strokeWidth="2dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                android:text="Donâ€™t have an account? "
                android:textSize="@dimen/etralarge_xml_text_size_sub" />

            <TextView
                android:id="@+id/sigenID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                android:text=" Sign up"
                android:textColor="@color/app_color"
                android:textSize="@dimen/etralarge_xml_text_size_sub" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llv"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="300sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:background="@drawable/ic_google" />

            <ImageView
                android:layout_width="300sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:background="@drawable/ic_facebook" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>