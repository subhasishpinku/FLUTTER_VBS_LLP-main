<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:ignore="MissingDefaultResource">
    <LinearLayout
        android:id="@+id/lv"
        android:background="@color/app_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Img"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Img2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:textColor="@color/white"
               />


            <ImageView
                android:id="@+id/Img2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/ic_cart" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="450sp"
        android:layout_marginTop="50sp"
        android:background="@drawable/ellipses"
        android:orientation="vertical"></FrameLayout>
    <TextView
        android:id="@+id/textView11"
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37sp"
        android:layout_marginTop="40sp"
        android:gravity="left"
        android:text="Payment status"
        android:textSize="@dimen/etralarge_xml_text_size"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/tvs"
        android:layout_below="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_marginTop="200sp"
            app:cardCornerRadius="20dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginLeft="0sp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="#FFFFFFFF">

            <ImageView
                android:id="@+id/imageView"
                android:background="@drawable/paymet_successful"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:padding="4dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv"
        android:layout_below="@+id/tvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="0sp"
            android:gravity="center"
            android:layout_marginLeft="0sp"
            android:textStyle="bold"
            android:textSize="@dimen/etralarge_xml_text_size_sub"
            android:text="Thanks for renting! "
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:gravity="left"
            android:layout_marginLeft="20sp"
            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.  "
            android:textColor="@color/black"
            android:textSize="@dimen/etralarge_xml_text_size_sub"
            android:justificationMode="inter_word"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50sp"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add"
                android:layout_width="500sp"
                android:layout_height="80sp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:drawableRight="@drawable/ic_pink_arrow"
                android:gravity="center"
                android:text="Keep Renting"
                android:textSize="40sp"
                app:backgroundTint="@color/app_color"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:rippleColor="@color/app_color"
                app:strokeColor="@color/app_color"
                app:strokeWidth="2dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>