<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/db1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivIcon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="150px"
            android:gravity="left"
            android:textSize="25sp"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="TIt is a long established "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIcon" />
        <TextView
            android:id="@+id/textView4"
            android:layout_marginTop="0px"
            android:gravity="left"
            android:layout_marginLeft="10sp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Tfact that a reader"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
        <TextView
            android:id="@+id/textView5"
            android:layout_marginTop="20px"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="20sp"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginBottom="10sp"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_marginTop="80sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/GfG_full_logo"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                app:srcCompat="@drawable/group" />

            <TextView
                android:id="@+id/skip_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30sp"
                android:layout_toRightOf="@+id/GfG_full_logo"
                android:gravity="end"
                android:text="Skip"
                android:textColor="@color/text_color"
                android:textSize="18sp"  />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>